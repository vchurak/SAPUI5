<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Dialog id="imageDialog" title="{Name}">
		<content>
			<Image id="prodcutImage" src="{ImageUrl}" width="{= !${device>/system/phone}? '25rem' : '15rem'}" densityAware="false" />
		</content>
		<beginButton>
			<Button id="btnCloseDialog" text="{i18n>xbut.ok}" press="onImageOKPressed" />
		</beginButton>
	</Dialog>
</core:FragmentDefinition>